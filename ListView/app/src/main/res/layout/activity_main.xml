<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ListView
        android:id="@+id/lvItem"
        android:layout_width="match_parent"
        android:layout_height="200dp"></ListView>

    <GridView
        android:id="@+id/grItem"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:numColumns="2"></GridView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btbDk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Them"></Button>

        <Button
            android:id="@+id/btbSua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Sua"></Button>

        <Button
            android:id="@+id/btbXoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xoa"></Button>
    </LinearLayout>

    <EditText
        android:id="@+id/editThem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Them mon............"></EditText>
</LinearLayout>


